{
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.3.0",
  "engines": {
    "node": "22.14.0",
    "pnpm": "10.3.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lucas-barake/rpc-tutorial.git"
  },
  "scripts": {
    "clean": "node scripts/clean.mjs",
    "build": "pnpm --filter @org/domain build && pnpm --filter @org/database build && pnpm --filter @org/client build && pnpm --filter @org/server build",
    "check": "tsc -b tsconfig.json",
    "check:recursive": "pnpm --recursive exec tsc -b tsconfig.json",
    "check:fast": "pnpm lint && pnpm check",
    "check:all": "pnpm lint && pnpm check && pnpm test",
    "lint": "eslint \"**/{src,test,examples,scripts,dtslint}/**/*.{ts,mjs,tsx}\" --quiet",
    "lint:fix": "pnpm lint --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "format": "prettier --write \"**/*.{js,ts,mjs,jsx,tsx,json,md,css,html,yaml,yml,mdx}\"",
    "format:check": "prettier --check \"**/*.{js,ts,mjs,jsx,tsx,json,md,css,html,yaml,yml,mdx}\"",
    "coverage": "vitest --coverage",
    "prepare": "husky"
  },
  "devDependencies": {
    "@babel/cli": "^7.25.9",
    "@babel/core": "^7.26.0",
    "@babel/plugin-transform-export-namespace-from": "^7.25.9",
    "@babel/plugin-transform-modules-commonjs": "^7.25.9",
    "@eslint/compat": "1.2.2",
    "@eslint/eslintrc": "3.1.0",
    "@eslint/js": "9.13.0",
    "@types/node": "^22.8.5",
    "@typescript-eslint/eslint-plugin": "8.14.0",
    "@typescript-eslint/parser": "8.14.0",
    "@vitest/coverage-v8": "2.1.9",
    "babel-plugin-annotate-pure-calls": "^0.4.0",
    "eslint": "9.13.0",
    "eslint-import-resolver-typescript": "^3.10.0",
    "eslint-plugin-codegen": "^0.29.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "5.1.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sort-destructure-keys": "^2.0.0",
    "glob": "^11.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "3.4.2",
    "prettier-plugin-embed": "^0.5.0",
    "prettier-plugin-organize-imports": "4.1.0",
    "prettier-plugin-sql": "^0.19.0",
    "prettier-plugin-tailwindcss": "0.6.11",
    "read-package-up": "11.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.8.2",
    "vitest": "3.1.1",
    "effect": "3.16.1",
    "@effect/platform": "0.86.0",
    "@effect/platform-browser": "0.66.0",
    "@effect/platform-node": "0.87.0",
    "@effect/experimental": "0.50.0",
    "@effect/opentelemetry": "0.52.0",
    "@effect/cluster": "0.40.0",
    "@effect/sql": "0.39.0",
    "@effect/sql-pg": "0.40.0",
    "@effect/eslint-plugin": "0.3.2",
    "@effect/language-service": "0.21.8",
    "@effect/vitest": "0.23.9",
    "@effect/rpc": "0.63.0",
    "@effect/ai": "0.20.0",
    "@effect/ai-openai": "0.23.0",
    "@effect/ai-anthropic": "0.10.0",
    "@effect-rx/rx-react": "0.37.0",
    "@effect/cli": "0.65.0"
  },
  "pnpm": {
    "overrides": {
      "vitest": "^2.0.5",
      "effect": "3.16.1",
      "@effect/platform": "0.84.1",
      "@effect/platform-browser": "0.64.1",
      "@effect/platform-node": "0.83.1",
      "@effect/experimental": "0.48.1",
      "@effect/opentelemetry": "0.50.1",
      "@effect/cluster": "0.36.1",
      "@effect/sql": "0.37.1",
      "@effect/sql-pg": "0.38.1",
      "@effect/eslint-plugin": "0.3.2",
      "@effect/language-service": "0.20.0",
      "@effect/vitest": "0.23.1",
      "@effect/rpc": "0.61.1",
      "@effect/ai": "0.18.12",
      "@effect/ai-openai": "0.21.12",
      "@effect/ai-anthropic": "0.8.12",
      "@effect-rx/rx-react": "0.36.1",
      "@effect/cli": "0.63.11",
      "@opentelemetry/resources": "2.0.0",
      "@opentelemetry/sdk-trace-base": "2.0.0",
      "@opentelemetry/sdk-trace-node": "2.0.0",
      "@opentelemetry/semantic-conventions": "1.30.0",
      "@opentelemetry/exporter-trace-otlp-http": "0.200.0"
    },
    "patchedDependencies": {
      "babel-plugin-annotate-pure-calls@0.4.0": "patches/babel-plugin-annotate-pure-calls@0.4.0.patch"
    }
  },
  "dependencies": {
    "tailwindcss": "4.0.4"
  }
}
