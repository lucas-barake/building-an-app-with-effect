{
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.3.0",
  "engines": {
    "node": "22.14.0",
    "pnpm": "10.3.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lucas-barake/rpc-tutorial.git"
  },
  "scripts": {
    "clean": "node scripts/clean.mjs",
    "build": "pnpm --filter @org/domain build && pnpm --filter @org/database build && pnpm --filter @org/client build && pnpm --filter @org/server build",
    "check": "tsc -b tsconfig.json",
    "check:recursive": "pnpm --recursive exec tsc -b tsconfig.json",
    "check:fast": "pnpm lint && pnpm check",
    "check:all": "pnpm lint && pnpm check && pnpm test",
    "lint": "pnpm lint:biome && pnpm lint:eslint",
    "lint:biome": "biome lint --diagnostic-level=error .",
    "lint:eslint": "time eslint . --quiet",
    "lint:fix": "biome check --diagnostic-level=error --write . && eslint . --quiet --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "format": "prettier --write \"**/*.{js,ts,mjs,jsx,tsx,json,md,css,html,yaml,yml,mdx}\"",
    "format:check": "prettier --check \"**/*.{js,ts,mjs,jsx,tsx,json,md,css,html,yaml,yml,mdx}\"",
    "coverage": "vitest --coverage",
    "prepare": "husky",
    "effect:list-latest": "bash ./scripts/dep-utils/list-latest-effect-deps.sh",
    "effect:update-deps": "bash ./scripts/dep-utils/update-effect-deps.sh"
  },
  "devDependencies": {
    "@babel/cli": "^7.25.9",
    "@babel/core": "^7.26.0",
    "@babel/plugin-transform-export-namespace-from": "^7.25.9",
    "@babel/plugin-transform-modules-commonjs": "^7.25.9",
    "@biomejs/biome": "2.2.0",
    "@eslint/js": "^9.19.0",
    "@types/node": "^22.8.5",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitest/coverage-v8": "2.1.9",
    "babel-plugin-annotate-pure-calls": "^0.4.0",
    "eslint": "^9.19.0",
    "eslint-import-resolver-typescript": "^3.10.0",
    "glob": "^11.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "3.4.2",
    "prettier-plugin-embed": "^0.5.0",
    "prettier-plugin-organize-imports": "4.1.0",
    "prettier-plugin-sql": "^0.19.0",
    "prettier-plugin-tailwindcss": "0.6.11",
    "read-package-up": "11.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.8.2",
    "vitest": "3.1.1",
    "effect": "3.17.9",
    "@effect/platform": "0.90.6",
    "@effect/platform-browser": "0.70.0",
    "@effect/platform-node": "0.96.0",
    "@effect/experimental": "0.54.6",
    "@effect/opentelemetry": "0.56.4",
    "@effect/cluster": "0.48.2",
    "@effect/sql": "0.44.2",
    "@effect/sql-pg": "0.45.1",
    "@effect/eslint-plugin": "0.3.2",
    "@effect/language-service": "0.35.2",
    "@effect/vitest": "0.25.1",
    "@effect/rpc": "0.69.1",
    "@effect/ai": "0.26.0",
    "@effect/ai-openai": "0.29.0",
    "@effect/ai-anthropic": "0.16.0",
    "@effect-atom/atom-react": "0.1.15",
    "@effect/cli": "0.69.2",
    "dotenv-cli": "^10.0.0"
  },
  "pnpm": {
    "overrides": {
      "vitest": "^2.0.5",
      "effect": "3.17.9",
      "@effect/platform": "0.90.6",
      "@effect/platform-browser": "0.70.0",
      "@effect/platform-node": "0.96.0",
      "@effect/experimental": "0.54.6",
      "@effect/opentelemetry": "0.56.4",
      "@effect/cluster": "0.48.2",
      "@effect/sql": "0.44.2",
      "@effect/sql-pg": "0.45.1",
      "@effect/eslint-plugin": "0.3.2",
      "@effect/language-service": "0.35.2",
      "@effect/vitest": "0.25.1",
      "@effect/rpc": "0.69.1",
      "@effect/ai": "0.26.0",
      "@effect/ai-openai": "0.29.0",
      "@effect/ai-anthropic": "0.16.0",
      "@effect-atom/atom-react": "0.1.15",
      "@effect/cli": "0.69.2",
      "@opentelemetry/resources": "2.0.0",
      "@opentelemetry/sdk-trace-base": "2.0.0",
      "@opentelemetry/sdk-trace-node": "2.0.0",
      "@opentelemetry/semantic-conventions": "1.30.0",
      "@opentelemetry/exporter-trace-otlp-http": "0.200.0"
    },
    "patchedDependencies": {
      "babel-plugin-annotate-pure-calls@0.4.0": "patches/babel-plugin-annotate-pure-calls@0.4.0.patch"
    }
  },
  "dependencies": {
    "tailwindcss": "4.0.4"
  }
}
